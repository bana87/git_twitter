<!DOCTYPE html>
<html>
  <head>
    <title>ついったー</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/notifications' %>
    <header>
      <h1><a href="/">ついったー</a></h1>
      <ul>
        <% if user_signed_in? %>
          <li>Username：<%= current_user.nickname %></li>
          <li class="btn">
            <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
          </li>
        <% else %>
          <li class="btn">
            <%= link_to 'Register', new_user_registration_path, class: 'post' %>
          </li>
          <li class="btn">
            <%= link_to 'Login', new_user_session_path, class: 'post' %>
          </li>
        <% end %>
      </ul>
    </header>

    <%= yield %>
  </body>
</html>
