<div class="contents">
  <% if current_user.id == @user.id %>
    <h2>マイページ</h2>
  <% else %>
    <h2>プロフィール</h2>
  <% end %>
  
  <img src=<%= @user.image %> width="100" height="100" alt = "ユーザー写真" %>
  <p><%= @user.nickname %></p>
  
  <% if current_user.id == @user.id %>
    <p><%= @user.email %></p>
    <%= link_to 'マイページを編集する', '/users/edit' %>
  <% end %>
</div>